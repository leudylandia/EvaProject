@model PersonaViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<form asp-action="Edit" asp-controller="Personas" method="post">
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" asp-for="Persona.Id" />
            <div class="form-group">
                <label asp-for="Persona.Nombre" class="control-label"></label>
                <input asp-for="Persona.Nombre" class="form-control" placeholder="Nombre" />
            </div>
            <div class="form-group">
                <label asp-for="Persona.Apellido" class="control-label"></label>
                <input asp-for="Persona.Apellido" class="form-control" placeholder="Apellido" />
            </div>
            <div class="form-group">
                <label asp-for="Persona.Cedula" class="control-label"></label>
                <input asp-for="Persona.Cedula" class="form-control" placeholder="Cedula" />
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label asp-for="Persona.FechaNacimiento" class="control-label"></label>
                    <input asp-for="Persona.FechaNacimiento" class="form-control" type="date" />
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label asp-for="Persona.ProvinciaId" class="control-label"></label>
                    <select class="form-control" asp-for="Persona.ProvinciaId" asp-items="@(new SelectList(Model.Provincia, "Id", "Name"))"></select>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            
            <div class="col-md-4">
                <input type="submit" value="Guardar" class="btn btn-primary" /> | <a asp-action="Index" asp-controller="Personas" class="btn btn-danger">Cancelar</a>
            </div>
            
        </div>

        
    </div>
</form>

