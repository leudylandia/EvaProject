@model ProvinciaViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm("Edit", "ProvinciaMVC", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Provincia.Id)

    <div class="form-group">
        @Html.LabelFor(p => p.Provincia.Name)
        @Html.TextBoxFor(p => p.Provincia.Name, new { id = "name", @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Provincia.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Provincia.PaisId)
        @Html.DropDownListFor(p => p.Provincia.PaisId, new SelectList(Model.Pais, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
    </div>

    <input type="submit" name="name" value="Guardar" />
}

